Checks: >
  *,
  -altera-*,
  -llvm-header-guard,
  -llvmlibc-restrict-system-libc-headers,
CheckOptions:
  - key: hicpp-uppercase-literal-suffix.NewSuffixes
    value: L;U;f
  - key: readability-uppercase-literal-suffix.NewSuffixes
    value: L;U;f
FormatStyle: file
HeaderFilterRegex: 'lv2/.*\.h'
WarningsAsErrors: '*'
